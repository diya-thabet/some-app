# Hirfa Backend Environment Variables
# Copy this file to .env and fill in the values

# Database (Required for production)
DATABASE_URL=jdbc:postgresql://your-production-db-host:5432/hirfa
DATABASE_USERNAME=hirfa_admin
DATABASE_PASSWORD=your_super_secure_password_here

# JWT Secret (Required - generate a secure 256-bit key)
# Generate with: openssl rand -hex 32
JWT_SECRET=your_256_bit_hex_secret_key

# Optional: Override JWT expiration (default: 86400000 = 24 hours)
# JWT_EXPIRATION=86400000
